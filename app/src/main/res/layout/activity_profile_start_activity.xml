<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_start_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.mi.ur.de.urfit.Activitys.Profile_start_activity">

    <LinearLayout
        android:id="@+id/profile_first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_name_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Name: Max Mustermann"
            android:textSize="20sp"
            android:textColor="@color/GhostWhite"
            android:background="@color/DodgerBlue4"/>


         <TextView
            android:id="@+id/profile_level_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Level 1"
            android:textColor="@color/DodgerBlue4"
            android:background="@drawable/ic_level_star"/>

    </LinearLayout>

    <TextView
        android:id="@+id/profile_gender_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geschlecht: männlich"
        android:textSize="20sp"
        android:textColor="@color/GhostWhite"
        android:background="@color/DodgerBlue4"
        android:layout_below="@id/profile_first_row"/>

    <TextView
        android:id="@+id/profile_step_length_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_gender_view"
        android:text="Schrittlänge: 74cm"
        android:textSize="20sp"
        android:textColor="@color/DodgerBlue4"/>

    <Button
        android:id="@+id/changeProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Profil ändern"
        android:textSize="20sp"
        android:background="@color/red3"
        android:textColor="@color/GhostWhite"
        />

</RelativeLayout>
