<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_start_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.mi.ur.de.urfit.Activitys.Profile_start_activity">

    <TextView
        android:id="@+id/profile_level_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ErgebnisButtonColor"
        android:gravity="center"
        android:text="@string/profile_start_level_text"
        android:textColor="@color/GhostWhite"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/profile_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_level_view"
        android:background="@color/DodgerBlue4"
        android:text="@string/profile_start_name_text"
        android:textColor="@color/GhostWhite"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/profile_gender_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name_view"
        android:text="@string/profile_start_gender_text"
        android:textColor="@color/DodgerBlue4"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/profile_step_length_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_gender_view"
        android:background="@color/DodgerBlue4"
        android:text="@string/profile_start_step_text"
        android:textColor="@color/GhostWhite"
        android:textSize="25sp" />

    <Button
        android:id="@+id/changeProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red3"
        android:text="@string/profile_start_buttontext"
        android:textColor="@color/GhostWhite"
        android:textSize="25sp" />

</RelativeLayout>
