<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activitys.start_activity">

    <TextView
        android:id="@+id/number_Steps_View"
        android:background="@color/ErgebnisButtonColor"
        android:text="@string/anzahl_schritte_view"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_View"
        android:background="@color/ErgebnisButtonColor"
        android:text="@string/gelaufene_zeit_view"
        android:textSize="20sp"
        android:layout_below="@id/number_Steps_View"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:id="@+id/persöhnliches_Tages_Ziel_View"
        android:background="@color/profilButtonColor"
        android:text="@string/mein_persoehnliches_tagesziel_text"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_View"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:id="@+id/persöhnliches_Hauptziel"
        android:background="@color/profilButtonColor"
        android:text="@string/Hauptziel_text"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/persöhnliches_Tages_Ziel_View"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <Button
        android:id="@+id/stop_Button"
        android:textColor="@color/GhostWhite"
        android:background="@color/red3"
        android:text="@string/stop_workout_Button"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
