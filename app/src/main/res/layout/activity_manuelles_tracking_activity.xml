<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manuelles_tracking_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.mi.ur.de.urfit.Activitys.manuellesTracking_activity">

    <TextView
        android:id="@+id/distance_done"
        android:text="@string/workout_activity"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <EditText
        android:id="@+id/editText_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_activity"
        android:layout_below="@id/distance_done"
        android:inputType="number"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/activity_time"
        android:text="@string/time_spent"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_distance"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <EditText
        android:id="@+id/editText_time_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_time_spent"
        android:layout_below="@+id/activity_time"
        android:inputType="number"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/date_activitiy"
        android:text="@string/activity_time"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_time_spent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <EditText
        android:id="@+id/editText_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_date"
        android:layout_below="@+id/date_activitiy"
        android:inputType="datetime"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/calories_lost"
        android:text="@string/calories_loss"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_activity_time"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>


    <Button
        android:id="@+id/addActivityButton"
        android:textColor="@color/GhostWhite"
        android:background="@color/red3"
        android:text="@string/button_add_activity"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
