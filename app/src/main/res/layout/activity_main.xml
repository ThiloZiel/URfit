<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activitys.MainActivity">

    <Button
        android:background="@color/DodgerBlue4"
        android:textColor="@color/GhostWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Button_Height"
        android:text="@string/start_workout_Button"
        android:id="@+id/startButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:id="@+id/main_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/startButton">



        <Button
            android:background="@color/ErgebnisButtonColor"
            android:textColor="@color/GhostWhite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Button_Height"
            android:text="@string/meine_ergebnisse_Button"
            android:id="@+id/ergebnisButton" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Button_Height"
            android:background="@color/profilButtonColor"
            android:text="@string/profil_Button"
            android:id="@+id/profilButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/main_row_2">



        <Button
            android:background="#434196"
            android:textColor="@color/GhostWhite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Button_Height"
            android:text="@string/einstellungen_Button"
            android:id="@+id/einstellungsButton" />

        <Button
            android:background="@color/hilfeButtonColor"
            android:textColor="@color/GhostWhite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/Button_Height"
            android:text="@string/hilfe_Button"
            android:id="@+id/hilfeButton" />


    </LinearLayout>

</RelativeLayout>
